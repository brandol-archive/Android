<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BoardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/board_back_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/black"
            android:layout_marginStart="23dp"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/board_brandname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BRANDOL"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/board_nowpos_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/board_brandname_tv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/board_nowcate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티"
                android:textSize="10sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp" />

            <TextView
                android:id="@+id/board_nowboard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자유게시판"
                android:textSize="10sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/board_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_search"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#F9F9F9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/board_board1_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/post_background"
            android:paddingBottom="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/board_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="7dp"
                android:background="#C8C8C8"
                android:src="@drawable/ic_avatar_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/board_usernick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:text="작성자"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/board_profile_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/board_posttitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="게시물 제목"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_profile_iv" />


            <TextView
                android:id="@+id/board_postcontent_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:text="사진 없으면 여기까지 글 여기까지 글 여기까지 글 여기까지 글~~~~~~~~~~~~~~~~~~~~~~~~~~~~..."
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@id/board_posttitle_tv"
                app:layout_constraintTop_toBottomOf="@id/board_posttitle_tv" />

            <Button
                android:id="@+id/board_like_btn"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

            <TextView
                android:id="@+id/board_likecnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:text="10"
                android:textColor="#FF7575"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_like_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

            <Button
                android:id="@+id/board_comment_btn"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_comment"
                app:layout_constraintStart_toEndOf="@id/board_like_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

            <TextView
                android:id="@+id/board_commentcnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:text="20"
                android:textColor="#6B68FF"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_comment_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

            <TextView
                android:id="@+id/board_division_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_commentcnt_tv"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

            <TextView
                android:id="@+id/board_posttime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="7dp"
                android:text="2023.12.10"
                android:textColor="@color/black"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_division_tv"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/board_board2_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/post_background"
            android:paddingBottom="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/board_board1_cl">

            <ImageView
                android:id="@+id/board_profile2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="7dp"
                android:background="#C8C8C8"
                android:src="@drawable/ic_avatar_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/board_usernick2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:text="작성자"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/board_profile2_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/board_posttitle2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="게시물 제목"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_profile2_iv" />


            <TextView
                android:id="@+id/board_postcontent2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="123dp"
                android:text="브랜드 추구 방향성, 문화 \n최근 게시글이 들어감글글글글글"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_posttitle2_tv" />

            <Button
                android:id="@+id/board_like2_btn"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <TextView
                android:id="@+id/board_likecnt2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:text="10"
                android:textColor="#FF7575"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_like2_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <Button
                android:id="@+id/board_comment2_btn"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_comment"
                app:layout_constraintStart_toEndOf="@id/board_like2_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <TextView
                android:id="@+id/board_commentcnt2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:text="20"
                android:textColor="#6B68FF"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_comment2_btn"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <TextView
                android:id="@+id/board_division2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_commentcnt2_tv"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <TextView
                android:id="@+id/board_posttime2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="7dp"
                android:text="2023.12.10"
                android:textColor="@color/black"
                android:textSize="9sp"
                app:layout_constraintStart_toEndOf="@id/board_division2_tv"
                app:layout_constraintTop_toBottomOf="@id/board_postcontent2_tv" />

            <ImageView
                android:id="@+id/board_image_iv"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginEnd="24dp"
                android:background="#D9D9D9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/board_writeboard_btn"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:background="@drawable/writebtn_border_1dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18.49dp"
            android:layout_height="18.5dp"
            android:background="@drawable/ic_write"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/board_writeboard_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>