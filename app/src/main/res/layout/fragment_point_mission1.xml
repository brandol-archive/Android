<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/point_mission_back_btn_iv"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_back"/>

            <TextView
                android:id="@+id/point_mission_brand_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="165dp"
                android:text="BRADNDOL"
                android:textSize="16dp"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/mission_background_iv"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="450dp"
            android:src="@drawable/object_default_background"/>

        <TextView
            android:id="@+id/mission1_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="11dp"
            android:text="브랜드 리스트에 BRANDOL를 추가하면"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="포인트 300P 획득!"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/selectedpurple"/>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/point_mission_before_ib"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/btn_mission_before"/>
            
            <TextView
                android:id="@+id/point_mision_before_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_marginStart="140dp"
                android:text="참여하고 포인트받기"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/point_mission_ing_ib"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/btn_mission_ing"/>

                <TextView
                    android:id="@+id/point_mision_ing_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="160dp"
                    android:text="미션 진행중...."
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/point_mission_finish_ib"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/btn_mission_before"/>

                <TextView
                    android:id="@+id/point_mision_finish_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_marginStart="170dp"
                    android:text="미션 완료!"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </FrameLayout>

            
        </FrameLayout>


        
        <TextView
            android:id="@+id/point_mission_refer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="11dp"
            android:text="*앱 최초 참여시에만 쿠키가 지급됩니다."
            android:textSize="12dp"
            android:textColor="@color/brightblack"/>

        <TextView
            android:id="@+id/point_mission_refer2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="11dp"
            android:text="*앱 최초 참여시에만 쿠키가 지급됩니다."
            android:textSize="12dp"
            android:textColor="@color/brightblack"/>

        <TextView
            android:id="@+id/point_mission_refer3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="11dp"
            android:text="*앱 최초 참여시에만 쿠키가 지급됩니다."
            android:textSize="12dp"
            android:textColor="@color/brightblack"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>