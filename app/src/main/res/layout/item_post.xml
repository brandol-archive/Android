<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/brand_rounded_rectangle"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_post_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입 인사 드립니다"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_post_contents_tv"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:text="안녕하세요!!"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_post_name_tv" />

    <TextView
        android:id="@+id/item_post_notice_board_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BRANDOL"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_post_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요/"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_post_contents_tv" />

    <TextView
        android:id="@+id/item_post_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글/"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_post_like_tv"
        app:layout_constraintTop_toTopOf="@id/item_post_like_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_post_comment_tv"
        app:layout_constraintTop_toTopOf="@id/item_post_like_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>