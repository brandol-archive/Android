<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/brand_related_search_terms_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="연관 검색어"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/brand_related_search_terms1_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_search_glasses_black"
                app:layout_constraintStart_toStartOf="@id/brand_related_search_terms_tv"
                app:layout_constraintTop_toBottomOf="@id/brand_related_search_terms_tv" />

            <TextView
                android:id="@+id/brand_related_search_terms1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="23dp"
                android:baselineAligned="false"
                android:text="연관 검색어 브랜드"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/brand_related_search_terms2_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_search_glasses_black"
                app:layout_constraintStart_toStartOf="@id/brand_related_search_terms_tv"
                app:layout_constraintTop_toBottomOf="@id/brand_related_search_terms1_iv"/>

            <TextView
                android:id="@+id/brand_related_search_terms2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="15dp"
                android:text="연관 검색어  2"
                android:textSize="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/brand_related_search_terms3_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_search_glasses_black"
                app:layout_constraintStart_toStartOf="@id/brand_related_search_terms_tv"
                app:layout_constraintTop_toBottomOf="@id/brand_related_search_terms2_iv"/>

            <TextView
                android:id="@+id/brand_related_search_terms3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginStart="15dp"
                android:text="연관 검색어 3"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/brand_related_search_terms4_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_search_glasses_black"
                app:layout_constraintStart_toStartOf="@id/brand_related_search_terms_tv"
                app:layout_constraintTop_toBottomOf="@id/brand_related_search_terms3_iv"/>

            <TextView
                android:id="@+id/brand_related_search_terms4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginStart="15dp"
                android:text="연관 검색어 4"
                android:textSize="15dp"/>


        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>