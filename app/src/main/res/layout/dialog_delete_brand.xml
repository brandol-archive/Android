<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:background="@drawable/object_default_background">

    <TextView
        android:id="@+id/dialog_delete_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/dialog_button_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="정말로 브랜드 리스트에서\n삭제하시겠습니까?" />

    <View
        android:id="@+id/top_classification_v"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#33000000"
        app:layout_constraintBottom_toTopOf="@+id/dialog_button_ll"/>

    <LinearLayout
        android:id="@+id/dialog_button_ll"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/dialog_yes_btn"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="구매"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/middle_classification_v"
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="#33000000" />

        <Button
            android:id="@+id/dialog_no_btn"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="취소"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
