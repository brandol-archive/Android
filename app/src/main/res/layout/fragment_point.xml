<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/point_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="180dp"
            android:text="포인트"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_point_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="내 포인트"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_point_p_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="500p"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/puple"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_line_bright"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            tools:context=".PointFragment">

            <TextView
                android:id="@+id/point_use_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="포인트 이용 내역"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/point_use_iv"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginStart="200dp"
                android:src="@drawable/btn_point_use" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_line_bright"/>

        <TextView
            android:id="@+id/point_mision_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="포인트 미션"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/point_mision1_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/img_brandol"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mission_title1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="브랜드 리스트에 추가하기!"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/mission_type1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="구독형 미션"
                    android:textSize="10dp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mission_point_box1_iv"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_puple_box"/>

                <TextView
                    android:id="@+id/mission_point1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="14dp"
                    android:text="+300p"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>


            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/img_line_bright"/>

        <ImageView
            android:id="@+id/point_mision2_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/img_brandol"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mission_title2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="브랜드 리스트에 추가하기!"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/mission_type2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="구독형 미션"
                    android:textSize="10dp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mission_point_box2_iv"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_puple_box"/>

                <TextView
                    android:id="@+id/mission_point2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="14dp"
                    android:text="+300p"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>


            </FrameLayout>

        </LinearLayout>






    </LinearLayout>

</ScrollView>