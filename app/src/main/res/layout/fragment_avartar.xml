<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AvartarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        android:padding="20dp">

        <FrameLayout
            android:id="@+id/avartar_base_avartar_fl"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/avartar_base_avartar_skin"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/no1_item_skin" />


            <ImageView
                android:id="@+id/avartar_base_avartar_pants"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/no1_item_pants" />

            <ImageView
                android:id="@+id/avartar_base_avartar_shirts"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/no1_item_shirts" />

            <ImageView
                android:id="@+id/avartar_base_avartar_hair"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/no1_item_woman_hair" />

            <ImageView
                android:id="@+id/avartar_base_avartar_shoes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no1_item_shoes"/>

        </FrameLayout>


        <ImageButton
            android:id="@+id/avartar_chatting_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/chatting_btn"
            app:layout_constraintEnd_toStartOf="@id/avartar_shop_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/avartar_chatting_quantity"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="@id/avartar_chatting_btn"
            app:layout_constraintEnd_toEndOf="@id/avartar_chatting_btn">

            <TextView
                android:id="@+id/avartar_chatting_quantity_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/avartar_shop_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/shoppingbag_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/avartar_category_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/selectedpurple"
        app:tabIndicatorHeight="5dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/selectedpurple"
        app:tabTextColor="@color/black" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/avartar_itemlist_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>