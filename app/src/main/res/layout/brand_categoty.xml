<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="horizontal">

        <!-- 20%의 투명도 -->
        <View
            android:id="@+id/gray_1"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#33000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/brand_logo_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/fan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAN : -"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/brand_logo_iv"
            app:layout_constraintTop_toTopOf="@id/brand_logo_iv" />

        <!-- 20%의 투명도 -->
        <View
            android:id="@+id/gray_2"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:background="#33000000"
            app:layout_constraintStart_toEndOf="@id/brand_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/fan_tv" />

        <TextView
            android:id="@+id/pr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="한 줄 소개, 카피"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/brand_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/fan_tv" />

        <!-- 20%의 투명도 -->
        <View
            android:id="@+id/gray_3"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:background="#33000000"
            app:layout_constraintStart_toEndOf="@id/brand_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/pr_tv" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="브랜드 명"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/brand_logo_iv"
            app:layout_constraintTop_toBottomOf="@+id/pr_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
