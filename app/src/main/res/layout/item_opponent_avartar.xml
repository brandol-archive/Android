<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/item_wear_avartar_image_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:src="@drawable/justexp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wear_avartar_brand_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드 명"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:background="@color/black"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/item_wear_avartar_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이템 명"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_wear_avartar_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="아이템 설명" />

        <TextView
            android:id="@+id/item_wear_avartar_point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:text="(아이템 구매 포인트)"/>


    </LinearLayout>


</LinearLayout>